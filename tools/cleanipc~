#!/bin/bash

ipsem=`ipcs -s`
aprev3=""
aprev2=""
aprev=""
for a in $ipsem
do
        if [ $a == "daq" ]
        then
         ipcrm -s $aprev
        fi
        aprev3=$aprev2
        aprev2=$aprev
        aprev=$a
done

ipshm=`ipcs -m`
for a in $ipshm
do
        if [ $a == "daq" ]
        then
         ipcrm -m $aprev
        fi
        aprev3=$aprev2
        aprev2=$aprev
        aprev=$a
done

ipmsg=`ipcs -q`
for a in $ipmsg
do
        if [ $a == "daq" ]
        then
         ipcrm -m $aprev
        fi
        aprev=$a
done
